<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TxtViewPrincipalBlack" >
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">30</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
     </style>

    <style name="TxtViewPrincipalWhite" >
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">30</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="txt1" parent="@style/TxtViewPrincipalBlack">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>


    <style name="MyAppThemeCalendar" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">#bfac40</item>
        <item name="android:minDate">01/01/2020</item>
        <item name="colorControlActivated">#FF000000</item>
        <item name="colorControlHighlight">#FF000000</item>
        <item name="android:backgroundStacked">#FFFFFFFF</item>
        <item name="android:colorBackground">#FFFFFFFF</item>
        <item name="android:backgroundSplit">#FFFFFFFF</item>
        <item name="android:background">#FFFFFFFF</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="TxtViewPrincipalWhite">
        <item name="android:textAlignment">viewEnd</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="MyDialogTheme" >
    <item name="android:background">@drawable/round_black</item>
    <item name="android:backgroundStacked">#bfac40</item>
    <item name="android:colorBackground">#bfac40</item>
    <item name="android:backgroundSplit">#bfac40</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFrame">@null</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:backgroundDimEnabled">false</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:textSize">17sp</item>
    <item name="fontFamily">@font/montserrat</item>
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">1</item>
    <item name="android:textStyle">bold</item>
    <item name="android:maxLength">30</item>
    </style>
</resources>