<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TxtViewPrincipalBlack" >
        <item name="android:padding">5dp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">50</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name= "autoSizeTextType">uniform</item>
    </style>


    <style name="TxtChip" >
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingStart">3dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">end</item>

    </style>

    <style name="TxtViewPrincipalBlackForCalendar" >
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="TxtViewPrincipalWhite" >
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">50</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name= "autoSizeTextType">uniform</item>
    </style>
    <style name="TxtViewPrincipalWhiteForDesc" >
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">40</item>
        <item name="android:maxLength">500</item>
        <item name="android:gravity">left</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name= "autoSizeTextType">uniform</item>
    </style>

    <style name="MyAppThemeCalendar" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="headerColor">#FF000000</item>
        <item name="colorAccent">@color/grey_800</item>
        <item name="android:minDate">01/01/2020</item>
        <item name="colorControlActivated">@color/grey_800</item>
        <item name="colorControlHighlight">#FF000000</item>
        <item name="android:backgroundStacked">#FFFFFFFF</item>
        <item name="android:colorBackground">#FFFFFFFF</item>
    </style>


    <style name="MyDialogTheme" >
    <item name="android:colorBackground">#bfac40</item>
    <item name="android:backgroundSplit">#bfac40</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFrame">@null</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:backgroundDimEnabled">false</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:textSize">16sp</item>
    <item name="fontFamily">@font/roboto</item>
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:maxLength">80</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name= "autoSizeTextType">uniform</item>
    </style>


    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:windowBackground">@drawable/loginback</item>
    </style>


    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#FFFFFFFF</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColorHint"> @color/white</item>
        <item name="hintTextColor"> @color/white</item>
        <item name="hintEnabled">true</item>
    </style>

</resources>