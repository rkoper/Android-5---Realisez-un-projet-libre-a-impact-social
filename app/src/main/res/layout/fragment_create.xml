<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_h_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.05"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_h_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.125"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_h_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.2"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_h_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.275"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_h_45"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.45"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_h_48"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.42"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_h_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.48"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_h_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.6"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_h_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.7"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_h_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.8"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_h_9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.9"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_v_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_v_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.44"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_v_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.56"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_v_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.2"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_v_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.8"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_v_95"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_v_05"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_h_98"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.98"/>

            <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_margin="15dp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/rectangle_corner_white"
                app:layout_constraintTop_toTopOf="@+id/gl_create_h_4"
                app:layout_constraintBottom_toTopOf="@+id/gl_create_h_45"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_create2_h_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.65"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_create2_h_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.46"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_create2_h_6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.54"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_create2_h_25"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.25"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_create2_h_75"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.85"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_create2_v_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.5"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_create2_v_6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.99"/>


                <CheckBox
                    android:background="@drawable/rectangle_corner_white"
                    style="@style/spinnerDropDownItemStyle"
                    android:text="I need "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/create_status_need"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/gl_create2_v_3"
                    app:layout_constraintRight_toLeftOf="@+id/create_status_bring"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <CheckBox
                    android:background="@drawable/rectangle_corner_white"
                    style="@style/spinnerDropDownItemStyle"
                    android:text="I am Bring "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/create_status_bring"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/gl_create2_v_3"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/create_status_need"/>
                <EditText
                    style="@style/TxtViewPrincipalBlack"
                    android:text="Item "
                    android:hint="Type Item"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/create_item"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/gl_create2_v_3"
                    app:layout_constraintRight_toRightOf="@+id/gl_create2_h_5"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <Spinner
                    style="@style/spinnerDropDownItemStyle"
                    android:text="Quantity "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/create_quantity"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/gl_create2_v_3"
                    app:layout_constraintRight_toRightOf="@+id/gl_create2_h_75" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:background="@null"
                android:theme="@style/TxtViewPrincipalWhite"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:hint="Event"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/gl_create_h_1"
                app:layout_constraintBottom_toBottomOf="@+id/gl_create_h_2"
                app:layout_constraintRight_toRightOf="@+id/gl_create_v_8"
                app:layout_constraintLeft_toLeftOf="@+id/gl_create_v_3"/>

            <EditText
                android:textColorHint="@color/white"
                android:background="@null"
                android:theme="@style/TxtViewPrincipalWhite"
                android:hint="Adress"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="@+id/gl_create_h_2"
                app:layout_constraintBottom_toBottomOf="@+id/gl_create_h_3"
                app:layout_constraintRight_toRightOf="@+id/gl_create_v_8"
                app:layout_constraintLeft_toLeftOf="@+id/gl_create_v_3"/>
            <TextView
                android:textColorHint="@color/white"
                android:id="@+id/create_date"
                android:theme="@style/TxtViewPrincipalWhite"
                android:hint="Date"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintRight_toRightOf="@+id/gl_create_v_5"
                app:layout_constraintTop_toTopOf="@+id/gl_create_h_3"
                app:layout_constraintBottom_toBottomOf="@+id/gl_create_h_4"
                app:layout_constraintLeft_toLeftOf="@+id/gl_create_v_05"/>
            <EditText
                android:textColorHint="@color/white"
                android:id="@+id/create_orga"
                android:background="@null"
                android:theme="@style/TxtViewPrincipalWhite"
                android:hint="Organizers"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textColor="@color/white"
                app:layout_constraintRight_toRightOf="@+id/gl_create_v_95"
                app:layout_constraintTop_toTopOf="@+id/gl_create_h_3"
                app:layout_constraintBottom_toBottomOf="@+id/gl_create_h_4"
                app:layout_constraintLeft_toLeftOf="@+id/gl_create_v_5"/>


            <androidx.recyclerview.widget.RecyclerView
                android:padding="50dp"
                android:id="@+id/create_recyclerView"
                android:background="@drawable/rectangle_corner"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@+id/gl_create_h_45"/>


            <ImageButton
                android:id="@+id/create_save"
                android:elevation="10dp"
                android:background="@drawable/round_black"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/save"
                app:layout_constraintTop_toTopOf="@+id/gl_create_h_9"
                app:layout_constraintBottom_toBottomOf="@+id/gl_create_h_98"
                app:layout_constraintLeft_toLeftOf="@+id/gl_create_v_8"
                app:layout_constraintRight_toRightOf="@+id/gl_create_v_95"
                android:contentDescription="save" />

            <ImageButton
                android:id="@+id/create_add"
                android:elevation="10dp"
                android:background="@drawable/round_black"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/plus"
                app:layout_constraintTop_toTopOf="@+id/gl_create_h_48"
                app:layout_constraintBottom_toBottomOf="@+id/gl_create_h_5"
                app:layout_constraintRight_toRightOf="@+id/gl_create_v_6"
                app:layout_constraintLeft_toLeftOf="@+id/gl_create_v_4"
                android:contentDescription="save" />


        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>