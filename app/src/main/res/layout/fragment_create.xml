<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ImageFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_h_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.1"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_h_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.2"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_h_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.3"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_h_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.4"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_h_45"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.45"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_h_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_h_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.6"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_h_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.7"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_h_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.8"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_h_9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.9"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_v_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_v_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.2"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_create_v_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.8"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/create_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/plus"
                android:tint="@color/ColorOne"
                app:layout_constraintTop_toTopOf="@+id/gl_create_h_9"
                app:layout_constraintLeft_toLeftOf="@+id/gl_create_v_8"
                android:contentDescription="save" />
            <EditText
                android:background="@null"
                android:theme="@style/TxtViewPrincipal"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:hint="Event"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/gl_create_h_1"
                app:layout_constraintBottom_toBottomOf="@+id/gl_create_h_2"
                app:layout_constraintRight_toRightOf="@+id/gl_create_v_8"
                app:layout_constraintLeft_toLeftOf="@+id/gl_create_v_3"/>

            <EditText
                android:textColorHint="@color/white"
                android:background="@null"
                android:theme="@style/TxtViewPrincipal"
                android:hint="Organizers"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/gl_create_h_2"
                app:layout_constraintBottom_toBottomOf="@+id/gl_create_h_3"
                app:layout_constraintRight_toRightOf="@+id/gl_create_v_8"
                app:layout_constraintLeft_toLeftOf="@+id/gl_create_v_3"/>
            <TextView
                android:textColorHint="@color/white"
                android:id="@+id/create_date"
                android:theme="@style/TxtViewPrincipal"
                android:hint="Date"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintRight_toRightOf="@+id/gl_create_v_8"
                app:layout_constraintTop_toTopOf="@+id/gl_create_h_3"
                app:layout_constraintBottom_toBottomOf="@+id/gl_create_h_4"
                app:layout_constraintLeft_toLeftOf="@+id/gl_create_v_3"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/create_add_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/plus"
                android:tint="@color/ColorOne"
                app:layout_constraintTop_toTopOf="@+id/gl_create_h_4"
                app:layout_constraintBottom_toBottomOf="@+id/gl_create_h_5"
                app:layout_constraintLeft_toLeftOf="@+id/gl_create_v_3"
                app:layout_constraintRight_toRightOf="@+id/gl_create_v_8"
                android:contentDescription="save" />
            <androidx.recyclerview.widget.RecyclerView
                android:padding="50dp"
                android:id="@+id/create_recyclerView"
                android:background="@drawable/rectangle_corner"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@+id/gl_create_h_45"/>







        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>