<?xml version="1.0" encoding="utf-8"?>
<com.so.dingbring.ExpandableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/expand_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl1"
        android:layout_width="match_parent"
        android:background="@drawable/triangle"
        android:layout_height="55dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/home_item_v15"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.15"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/home_item_v85"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.85"/>

        <TextView
            android:id="@+id/home_name"
            style="@style/TxtViewPrincipalBlack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/home_item_v15"
            app:layout_constraintRight_toRightOf="@+id/home_item_v85"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/event" />

        <TextView
            android:id="@+id/home_item_round"
            style="@style/TxtViewPrincipalWhite"
            android:padding="0dp"
            android:text="@string/_1"
            android:background="@drawable/round_black_small"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/home_item_v15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:background="@drawable/arrow_down"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/home_item_v85"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/display_event" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/cl1"
        android:background="@color/white"
        android:padding="10dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/home_item_v48"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.48"/>
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.52"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/home_item_v7"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/home_item_h5"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>

        <ImageView
            android:background="@drawable/triangle"
            android:rotation="180"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/home_item_h5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:contentDescription="@string/decoration" />

        <ImageView
            android:contentDescription="@string/decoration"
            android:background="@drawable/triangle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/home_item_h5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/home_date"
            style="@style/TxtViewPrincipalBlack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/home_item_h5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/home_item_v48"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="" />
        <TextView
            android:id="@+id/home_orga"
            style="@style/TxtViewPrincipalBlack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/home_item_h5"
            app:layout_constraintLeft_toLeftOf="@id/home_item_v48"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="" />
        <TextView
            android:id="@+id/home_city"
            style="@style/TxtViewPrincipalBlack"
            app:layout_constraintTop_toTopOf="@id/home_item_h5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/home_item_v7"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="" />
        <TextView
            android:id="@+id/home_address"
            style="@style/TxtViewPrincipalBlack"
            app:layout_constraintTop_toTopOf="@id/home_item_h5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/home_item_v7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.so.dingbring.ExpandableLayout>