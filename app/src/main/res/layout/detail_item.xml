<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/fui_transparent"
    android:layout_height="60dp"
    android:layout_margin="2dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detail_item_cl"
        android:layout_width="match_parent"
        android:background="@color/fui_transparent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_h_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.02"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_h_98"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.98"/>
        <View
            android:id="@+id/topV"
            app:layout_constraintTop_toTopOf="@+id/detail_gl_h_02"
            app:layout_constraintRight_toRightOf="@+id/item_view_2"
            app:layout_constraintLeft_toLeftOf="@+id/item_view_1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/purple_300" />
        <View
            android:id="@+id/bottomV"
            app:layout_constraintBottom_toBottomOf="@+id/detail_gl_h_98"
            app:layout_constraintRight_toRightOf="@+id/item_view_2"
            app:layout_constraintLeft_toLeftOf="@+id/item_view_1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/purple_300" />
        <View
            android:id="@+id/item_view_1"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/detail_gl_h_02"
            app:layout_constraintBottom_toBottomOf="@+id/detail_gl_h_98"
            app:layout_constraintLeft_toLeftOf="@+id/detail_item_global"
            app:layout_constraintRight_toRightOf="@+id/detail_item_global"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/purple_300" />
        <View
            android:id="@+id/item_view_2"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/detail_gl_h_02"
            app:layout_constraintBottom_toBottomOf="@+id/detail_gl_h_98"
            app:layout_constraintLeft_toLeftOf="@+id/detail_item_photo"
            app:layout_constraintRight_toRightOf="@+id/detail_item_photo"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/purple_300" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_h_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_h_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_h_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_h_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.475"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_h_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.525"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_h_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.01"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.18"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.28"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_84"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.99"/>


        <TextView
            android:id="@+id/detail_item_type"
            style="@style/TxtViewPrincipalBlack"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ellipsize="end"
            android:text="Text"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/detail_gl_h_8"
            app:layout_constraintLeft_toRightOf="@+id/detail_item_band"
            app:layout_constraintRight_toRightOf="@+id/detail_gl_v_8"
            app:layout_constraintTop_toTopOf="@+id/detail_gl_h_4" />


        <TextView
            style="@style/TxtViewPrincipalBlack"
            android:text="8"
            android:padding="15dp"
            android:layout_marginRight="10dp"
            android:id="@+id/detail_item_quantity"
            app:layout_constraintTop_toTopOf="@+id/detail_item_photo"
            app:layout_constraintBottom_toBottomOf="@+id/detail_item_photo"
            app:layout_constraintRight_toLeftOf="@+id/detail_item_photo"
            app:layout_constraintLeft_toRightOf="@+id/detail_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/black" />


        <ImageView
            android:id="@+id/detail_item_photo"
            android:visibility="visible"
            android:background="@drawable/round"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toTopOf="@+id/detail_gl_h_1"
            app:layout_constraintBottom_toBottomOf="@+id/detail_gl_h_9"
            app:layout_constraintRight_toRightOf="@+id/detail_gl_v_9"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <ImageView
            android:layout_margin="5dp"
            android:visibility="invisible"
            android:id="@+id/detail_item_band"
            android:backgroundTint="@color/yellow_800"
            android:background="@drawable/logo_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/detail_item_global"
            app:layout_constraintRight_toLeftOf="@+id/detail_item_type" />

        <ImageView
            android:visibility="invisible"
            android:id="@+id/detail_item_cache"
            app:layout_constraintTop_toTopOf="@+id/topV"
            app:layout_constraintBottom_toBottomOf="@+id/bottomV"
            app:layout_constraintLeft_toLeftOf="@+id/item_view_1"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/purple_300"
            android:background="@drawable/rectangle_corner"/>


        <ImageView
            android:id="@+id/detail_item_global"
            android:visibility="visible"
            android:background="@drawable/round_small"
            android:backgroundTint="@color/purple_300"
            app:srcCompat="@drawable/logo_edit"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="@+id/detail_gl_h_1"
            app:layout_constraintBottom_toBottomOf="@+id/detail_gl_h_9"
            app:layout_constraintLeft_toLeftOf="@+id/detail_gl_v_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/black" />


        <ImageView
            android:id="@+id/detail_item_status"
            android:visibility="invisible"
            android:background="@drawable/round_small"
            app:srcCompat="@drawable/logo_check"
            android:backgroundTint="@color/purple_300"
            android:padding="1dp"
            app:layout_constraintTop_toTopOf="@+id/detail_gl_h_1"
            app:layout_constraintBottom_toBottomOf="@+id/detail_gl_h_9"
            app:layout_constraintLeft_toRightOf="@+id/detail_item_global"
            app:layout_constraintRight_toLeftOf="@+id/detail_item_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/black" />
        <ImageView
            android:id="@+id/detail_item_plus"
            android:visibility="invisible"
            android:background="@drawable/round_small"
            app:srcCompat="@drawable/logo_plus"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="@+id/detail_gl_h_1"
            app:layout_constraintBottom_toBottomOf="@+id/detail_gl_h_9"
            app:layout_constraintLeft_toRightOf="@+id/detail_item_status"
            app:layout_constraintRight_toLeftOf="@+id/detail_item_minus"
            android:backgroundTint="@color/purple_300"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/black" />
        <ImageView
            android:id="@+id/detail_item_minus"
            android:visibility="invisible"
            android:background="@drawable/round_small"
            app:srcCompat="@drawable/logo_minus"
            android:padding="5dp"
            android:backgroundTint="@color/purple_300"
            app:layout_constraintTop_toTopOf="@+id/detail_gl_h_1"
            app:layout_constraintBottom_toBottomOf="@+id/detail_gl_h_9"
            app:layout_constraintLeft_toRightOf="@+id/detail_item_plus"
            app:layout_constraintRight_toLeftOf="@+id/detail_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/black" />
        <ImageView
            android:id="@+id/detail_item_delete"
            android:visibility="invisible"
            android:background="@drawable/round_small"
            android:backgroundTint="@color/purple_300"
            app:srcCompat="@drawable/logo_delete"
            app:layout_constraintTop_toTopOf="@+id/detail_item_photo"
            app:layout_constraintBottom_toBottomOf="@+id/detail_item_photo"
            app:layout_constraintLeft_toLeftOf="@+id/detail_item_photo"
            app:layout_constraintRight_toRightOf="@+id/detail_item_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/black" />











    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>