<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="2dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detail_item_cl"
        android:layout_width="match_parent"
        android:background="@color/fui_transparent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_h_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.02"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_h_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.03"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_h_98"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.98"/>
        <View
            android:id="@+id/topV"
            app:layout_constraintTop_toTopOf="@+id/detail_gl_h_02"
            app:layout_constraintRight_toRightOf="@+id/item_view_2"
            app:layout_constraintLeft_toLeftOf="@+id/item_view_1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/red_300" />
        <View
            android:id="@+id/bottomV"
            app:layout_constraintBottom_toBottomOf="@+id/detail_gl_h_98"
            app:layout_constraintRight_toRightOf="@+id/item_view_2"
            app:layout_constraintLeft_toLeftOf="@+id/item_view_1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/red_300" />
        <View
            android:id="@+id/item_view_1"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/detail_gl_h_02"
            app:layout_constraintBottom_toBottomOf="@+id/detail_gl_h_98"
            app:layout_constraintLeft_toLeftOf="@+id/detail_item_global"
            app:layout_constraintRight_toRightOf="@+id/detail_item_global"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/red_300" />
        <View
            android:id="@+id/item_view_2"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/detail_gl_h_02"
            app:layout_constraintBottom_toBottomOf="@+id/detail_gl_h_98"
            app:layout_constraintLeft_toLeftOf="@+id/detail_item_photo"
            app:layout_constraintRight_toRightOf="@+id/detail_item_photo"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/red_300" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_h_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.18"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_h_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_h_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_h_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.475"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_h_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.525"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_h_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.01"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.07"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_93"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.93"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.16"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.28"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.72"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_85"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.92"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.99"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.39"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.55"/>


        <TextView
            android:id="@+id/detail_item_type"
            style="@style/TxtViewPrincipalBlack"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text=""
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/detail_gl_h_8"
            app:layout_constraintLeft_toRightOf="@+id/detail_gl_v_28"
            app:layout_constraintRight_toLeftOf="@+id/detail_gl_v_8"
            app:layout_constraintTop_toTopOf="@+id/detail_gl_h_4" />


        <TextView
            style="@style/TxtViewPrincipalBlack"
            android:text=""
            android:id="@+id/detail_item_quantity"
            android:textSize="20sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@+id/detail_item_photo"
            app:layout_constraintBottom_toBottomOf="@+id/detail_item_photo"
            app:layout_constraintLeft_toLeftOf="@+id/detail_gl_v_8"
            app:layout_constraintRight_toLeftOf="@+id/detail_item_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/black" />



        <ImageView
            android:id="@+id/detail_item_p"
            android:visibility="visible"
            android:background="@drawable/round"
            android:backgroundTint="@color/red_300"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toTopOf="@+id/detail_gl_h_1"
            app:layout_constraintBottom_toBottomOf="@+id/detail_gl_h_9"
            app:layout_constraintRight_toRightOf="@+id/detail_gl_v_9"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <ImageView
            android:visibility="visible"
            android:background="@drawable/round"
            android:id="@+id/detail_item_photo"
            app:layout_constraintTop_toTopOf="@+id/detail_item_p"
            app:layout_constraintBottom_toBottomOf="@+id/detail_item_p"
            app:layout_constraintRight_toRightOf="@+id/detail_item_p"
            app:layout_constraintLeft_toLeftOf="@+id/detail_item_p"
            android:layout_width="36dp"
            android:layout_height="36dp" />




        <ImageView
            android:id="@+id/detail_item_b"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@+id/detail_gl_v_28"
            app:layout_constraintLeft_toLeftOf="@+id/detail_gl_v_16"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:elevation="1dp"
            android:visibility="visible"
            android:backgroundTint="@color/red_300"
            android:background="@drawable/round_small" />

        <ImageView
            android:id="@+id/detail_item_band"
            app:layout_constraintTop_toTopOf="@+id/detail_item_b"
            app:layout_constraintBottom_toBottomOf="@+id/detail_item_b"
            app:layout_constraintRight_toRightOf="@+id/detail_item_b"
            app:layout_constraintLeft_toLeftOf="@+id/detail_item_b"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:visibility="visible"
            android:elevation="1dp"
            android:background="@drawable/round_small"
            android:backgroundTint="@color/grey_600"/>
        <ImageView
            android:id="@+id/detail_item_bandb"
            app:layout_constraintTop_toTopOf="@+id/detail_item_band"
            app:layout_constraintBottom_toBottomOf="@+id/detail_item_band"
            app:layout_constraintRight_toRightOf="@+id/detail_item_band"
            app:layout_constraintLeft_toLeftOf="@+id/detail_item_band"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="visible"
            android:elevation="1dp"
            app:srcCompat="@drawable/logo_warning"
            android:background="@drawable/round_small"
            android:backgroundTint="@color/grey_600"/>


        <ImageView
            android:elevation="3dp"
            android:id="@+id/detail_item_sub"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/grey_600"
            android:visibility="invisible"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintLeft_toLeftOf="@+id/detail_gl_v_07"
            app:layout_constraintBottom_toBottomOf="@+id/detail_gl_h_98"
            app:layout_constraintRight_toRightOf="@+id/detail_gl_v_93"
            app:layout_constraintTop_toTopOf="@+id/detail_gl_h_03" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/detail_item_global"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="@+id/detail_gl_h_1"
            app:layout_constraintBottom_toBottomOf="@+id/detail_gl_h_9"
            app:layout_constraintLeft_toLeftOf="@+id/detail_gl_v_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabCustomSize="35dp"
            app:borderWidth="2dp"
            app:maxImageSize="22dp"
            app:srcCompat="@drawable/logo_edit"
            app:tint="@android:color/white"
            android:backgroundTint="@color/grey_600"
            app:backgroundTint="@color/red_300" />




        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/detail_item_plus"
            app:layout_constraintTop_toTopOf="@+id/detail_gl_h_1"
            app:layout_constraintBottom_toBottomOf="@+id/detail_gl_h_9"
            app:layout_constraintLeft_toRightOf="@+id/detail_item_global"
            app:layout_constraintRight_toLeftOf="@+id/detail_item_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:fabCustomSize="35dp"
            app:borderWidth="2dp"
            app:maxImageSize="22dp"
            app:srcCompat="@drawable/logo_plus"
            app:tint="@android:color/white"
            android:backgroundTint="@color/grey_600"
            app:backgroundTint="@color/red_300" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/detail_item_minus"
            app:layout_constraintTop_toTopOf="@+id/detail_gl_h_1"
            app:layout_constraintBottom_toBottomOf="@+id/detail_gl_h_9"
            app:layout_constraintLeft_toRightOf="@+id/detail_item_plus"
            app:layout_constraintRight_toLeftOf="@+id/detail_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabCustomSize="35dp"
            android:visibility="invisible"
            app:borderWidth="2dp"
            app:maxImageSize="22dp"
            app:srcCompat="@drawable/logo_minus"
            app:tint="@android:color/white"
            android:backgroundTint="@color/grey_600"
            app:backgroundTint="@color/red_300" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/detail_item_delete"
            android:background="@drawable/round_small"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="@+id/detail_item_photo"
            app:layout_constraintBottom_toBottomOf="@+id/detail_item_photo"
            app:layout_constraintLeft_toLeftOf="@+id/detail_item_photo"
            app:layout_constraintRight_toRightOf="@+id/detail_item_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabCustomSize="45dp"
            app:borderWidth="2dp"
            app:maxImageSize="22dp"
            app:srcCompat="@drawable/logo_delete"
            app:tint="@android:color/white"
            android:backgroundTint="@color/grey_600"
            app:backgroundTint="@color/red_300" />









    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
