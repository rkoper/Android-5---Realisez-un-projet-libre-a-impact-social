<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/create_item_all"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:padding="2dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_create_item_v_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_create_item_v_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_create_item_v_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.24"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_create_item_v_4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_create_item_v_5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_create_item_v_6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_create_item_v_7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_create_item_v_8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_create_item_v_9"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_create_item_h_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.09"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_create_item_h_9"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"/>

    <ImageView
        android:visibility="invisible"
        style="@style/TxtViewPrincipalBlack"
        android:src="@drawable/check"
        android:id="@+id/create_num_item_ok"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/gl_create_item_v_1"
        app:layout_constraintTop_toTopOf="@+id/gl_create_item_h_1"
        app:layout_constraintBottom_toBottomOf="@+id/gl_create_item_h_9"
        android:background="@drawable/round_black"/>
    <ImageView
        android:visibility="invisible"
        style="@style/TxtViewPrincipalBlack"
        android:src="@drawable/round_white"
        android:id="@+id/create_num_item_wait"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/gl_create_item_v_1"
        app:layout_constraintTop_toTopOf="@+id/gl_create_item_h_1"
        app:layout_constraintBottom_toBottomOf="@+id/gl_create_item_h_9"
        android:background="@drawable/round_black"/>
    <TextView
        style="@style/TxtViewPrincipalBlack"
        android:id="@+id/detail_item_status"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="I Need"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@+id/gl_create_item_v_1"
        app:layout_constraintRight_toRightOf="@+id/gl_create_item_v_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:padding="5dp"
        style="@style/TxtViewPrincipalBlack"
        android:id="@+id/detail_item_quantity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="8"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@+id/gl_create_item_v_3"
        app:layout_constraintRight_toRightOf="@+id/gl_create_item_v_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:padding="5dp"
        style="@style/TxtViewPrincipalBlack"
        android:id="@+id/detail_item_type"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Itemmmmmmmmmmmmmmm"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:ellipsize="end"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/gl_create_item_v_4"
        app:layout_constraintRight_toRightOf="@+id/gl_create_item_v_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:padding="5dp"
        style="@style/TxtViewPrincipalBlack"
        android:id="@+id/detail_item_personn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="14sp"
        android:text="Orgaaaaa"
        android:textColor="@color/black"
        android:ellipsize="end"
        app:layout_constraintLeft_toLeftOf="@+id/gl_create_item_v_8"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>