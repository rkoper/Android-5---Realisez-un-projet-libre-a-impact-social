<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_margin="2dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detail_item_cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_h_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_h_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.7"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_h_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_h_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_h_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.03"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.18"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.32"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.88"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_84"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_86"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.98"/>
       <TextView
            style="@style/TxtViewPrincipalBlack"
            android:id="@+id/detail_item_quantity"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="8"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="@+id/detail_gl_v_2"
            app:layout_constraintRight_toRightOf="@+id/detail_gl_v_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/detail_item_type"
            style="@style/TxtViewPrincipalBlack"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ellipsize="end"
            android:text="Text"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/detail_gl_v_35"
            app:layout_constraintRight_toRightOf="@+id/detail_gl_v_8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/detail_item_photo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/detail_gl_v_84"
            app:layout_constraintRight_toRightOf="@+id/detail_gl_v_86"
            app:layout_constraintBottom_toBottomOf="@+id/detail_gl_h_6"
            app:layout_constraintTop_toTopOf="@+id/detail_gl_h_1" />

        <TextView
            android:textSize="5sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:id="@+id/detail_item_personn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="jean jaques des puits foufou"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="@+id/detail_gl_v_8"
            app:layout_constraintRight_toRightOf="@+id/detail_gl_v_9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/detail_gl_h_6" />




        <ImageView
            android:id="@+id/detail_item_band"
            android:background="@drawable/round_white_small"
          android:src="@drawable/warning"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/detail_item_quantity"
            app:layout_constraintRight_toLeftOf="@+id/detail_item_type"/>

        <ImageView
            android:visibility="invisible"
            android:id="@+id/detail_item_cache"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/brown_200"
            android:background="@drawable/rounded_r_orange"/>


        <ImageView
            android:id="@+id/detail_item_global"
            android:visibility="visible"
            android:background="@drawable/round_black_small"
            android:backgroundTint="@color/brown_300"
            android:src="@drawable/edit"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="@+id/detail_gl_h_1"
            app:layout_constraintBottom_toBottomOf="@+id/detail_gl_h_9"
            app:layout_constraintLeft_toLeftOf="@+id/detail_gl_v_1"
            app:layout_constraintRight_toRightOf="@+id/detail_gl_v_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/black" />
        <ImageView
            android:id="@+id/detail_item_status"
            android:visibility="invisible"
            android:background="@drawable/round_black_small"
            android:src="@drawable/check"
            android:backgroundTint="@color/brown_300"
            android:padding="1dp"
            app:layout_constraintTop_toTopOf="@+id/detail_gl_h_1"
            app:layout_constraintBottom_toBottomOf="@+id/detail_gl_h_9"
            app:layout_constraintLeft_toRightOf="@+id/detail_item_global"
            app:layout_constraintRight_toLeftOf="@+id/detail_item_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/black" />
        <ImageView
            android:id="@+id/detail_item_plus"
            android:visibility="invisible"
            android:background="@drawable/round_black_small"
            android:src="@drawable/plus"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="@+id/detail_gl_h_1"
            app:layout_constraintBottom_toBottomOf="@+id/detail_gl_h_9"
            app:layout_constraintLeft_toRightOf="@+id/detail_item_status"
            app:layout_constraintRight_toLeftOf="@+id/detail_item_minus"
            android:backgroundTint="@color/brown_300"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/black" />
        <ImageView
            android:id="@+id/detail_item_minus"
            android:visibility="invisible"
            android:background="@drawable/round_black_small"
            android:src="@drawable/minus"
            android:padding="5dp"
            android:backgroundTint="@color/brown_300"
            app:layout_constraintTop_toTopOf="@+id/detail_gl_h_1"
            app:layout_constraintBottom_toBottomOf="@+id/detail_gl_h_9"
            app:layout_constraintLeft_toRightOf="@+id/detail_item_plus"
            app:layout_constraintRight_toLeftOf="@+id/detail_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/black" />
        <ImageView
            android:id="@+id/detail_item_delete"
            android:visibility="invisible"
            android:background="@drawable/round_black_small"
            android:backgroundTint="@color/brown_300"
            android:src="@drawable/delete"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="@+id/detail_gl_h_1"
            app:layout_constraintBottom_toBottomOf="@+id/detail_gl_h_9"
            app:layout_constraintLeft_toRightOf="@+id/detail_item_minus"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/black" />










    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>