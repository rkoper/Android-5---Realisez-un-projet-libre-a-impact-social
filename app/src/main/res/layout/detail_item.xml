<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="2dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detail_item_cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_h_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_h_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.7"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_h_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_h_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_h_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.03"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.18"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0."/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.88"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_gl_v_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.98"/>
       <TextView
            style="@style/TxtViewPrincipalBlack"
            android:id="@+id/detail_item_quantity"
            android:layout_width="0dp"
            android:layout_height="0dp"
           android:layout_margin="5dp"
            android:text="8"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="@+id/detail_gl_v_2"
            app:layout_constraintRight_toRightOf="@+id/detail_gl_v_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/detail_item_type"
            style="@style/TxtViewPrincipalBlack"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ellipsize="end"
            android:padding="18dp"
            android:text="Text"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/detail_gl_v_3"
            app:layout_constraintRight_toRightOf="@+id/detail_gl_v_8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/detail_item_photo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/detail_gl_v_8"
            app:layout_constraintRight_toRightOf="@+id/detail_gl_v_9"
            app:layout_constraintBottom_toBottomOf="@+id/detail_gl_h_8"
            app:layout_constraintTop_toTopOf="@+id/detail_gl_h_1" />

        <TextView
            android:padding="0dp"
            style="@style/TxtViewPrincipalBlack"
            android:id="@+id/detail_item_personn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Text"
            android:gravity="center"
            android:textColor="@color/black"
            android:ellipsize="end"
            app:layout_constraintLeft_toLeftOf="@+id/detail_gl_v_8"
            app:layout_constraintRight_toRightOf="@+id/detail_gl_v_9"
            app:layout_constraintBottom_toBottomOf="@+id/detail_gl_h_9"
            app:layout_constraintTop_toTopOf="@+id/detail_gl_h_8" />

        <com.imangazaliev.circlemenu.CircleMenu
            app:layout_constraintTop_toTopOf="@+id/detail_gl_h_1"
            app:layout_constraintBottom_toBottomOf="@+id/detail_gl_h_9"
            app:layout_constraintLeft_toLeftOf="@+id/detail_gl_v_1"
            app:layout_constraintRight_toRightOf="@+id/detail_gl_v_2"
            app:menuIcon="hamburger"
            app:startAngle="-45"
            app:maxAngle="125"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:id="@+id/circleMenu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:buttonColors="@array/simple_menu_colors"
            app:buttonIcons="@array/simple_menu_icons" />


        <TextView
            android:id="@+id/detail_item_band"
            android:background="@color/orange_200"
            android:rotation="-45"
            android:gravity="center"
            style="@style/TxtViewPrincipalBlackForBand"
            android:text="I need"
            android:layout_marginEnd="90dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/detail_gl_h_4"
            app:layout_constraintBottom_toBottomOf="@+id/detail_gl_h_6"
            app:layout_constraintLeft_toLeftOf="@+id/detail_gl_v_3"
            app:layout_constraintRight_toRightOf="@+id/detail_gl_v_4"/>






    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>