<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.home.HomeFragment">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_home_h_05"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_home_h_15"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_home_h_2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_home_h_9"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.85"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_home_h_93"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.93"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_home_v_5"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_home_h_98"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.98"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_home_v_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_home_v_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_home_v_8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_home_v_95"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"/>

        <androidx.recyclerview.widget.RecyclerView
            android:paddingBottom="15dp"

            android:layout_marginBottom="60dp"
            android:background="@drawable/rectangle_corner"
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/gl_home_h_2"/>


        <ImageView
            android:padding="3dp"
            android:src="@mipmap/ic_launcher_round"
            android:id="@+id/home_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/gl_home_v_4"
            app:layout_constraintRight_toRightOf="@+id/gl_home_v_6"
            app:layout_constraintTop_toTopOf="@+id/gl_home_h_05"
            app:layout_constraintBottom_toBottomOf="@+id/gl_home_h_15"/>

        <TextView
            style="@style/TxtViewPrincipalBlack"
            android:id="@+id/home_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="TextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/gl_home_h_15"
            app:layout_constraintBottom_toBottomOf="@id/gl_home_h_2" />

        <com.gauravk.bubblenavigation.BubbleNavigationConstraintView
            android:id="@+id/floating_top_bar_navigation"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:background="@drawable/rectangle_corner_white"
            android:elevation="10dp"
            android:padding="12dp"
            app:bnc_mode="packed"
            app:layout_constraintTop_toTopOf="@+id/gl_home_h_9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.gauravk.bubblenavigation.BubbleToggleView
                android:id="@+id/main_item_home"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:bt_active="true"
                app:bt_titleSize="25sp"
                app:bt_colorActive="@color/red_active"
                app:bt_colorInactive="@color/grey_active"
                app:bt_icon="@drawable/homecircle"
                app:bt_shape="@drawable/rounded_r_red"
                app:bt_badgeTextSize="30sp"
                app:bt_shapeColor="@color/red_bg_light"
                app:bt_title="Home"
                android:elevation="10dp"
                app:layout_constraintTop_toTopOf="@+id/floating_top_bar_navigation"
                app:layout_constraintBottom_toBottomOf="@+id/floating_top_bar_navigation"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/main_item_add"


                />



            <com.gauravk.bubblenavigation.BubbleToggleView
                app:layout_constraintLeft_toRightOf="@+id/main_item_home"
                app:layout_constraintRight_toLeftOf="@+id/main_item_calendar"
                android:id="@+id/main_item_add"
                android:layout_width="wrap_content"
                app:bt_titleSize="25sp"
                android:layout_height="0dp"
                app:bt_colorActive="@color/blue_active"
                app:bt_colorInactive="@color/grey_active"
                app:bt_icon="@drawable/addcircle"
                app:bt_shape="@drawable/rounded_r_purple"
                app:bt_shapeColor="@color/blue_bg_light"
                android:elevation="10dp"
                app:bt_title="Create"
                app:layout_constraintTop_toTopOf="@+id/floating_top_bar_navigation"
                app:layout_constraintBottom_toBottomOf="@+id/floating_top_bar_navigation"


                />

            <com.gauravk.bubblenavigation.BubbleToggleView
                app:layout_constraintLeft_toRightOf="@+id/main_item_add"
                app:layout_constraintRight_toLeftOf="@+id/main_item_personn"
                android:id="@+id/main_item_calendar"
                android:layout_width="wrap_content"
                app:bt_titleSize="25sp"
                android:layout_height="0dp"
                app:bt_colorActive="@color/purple_active"
                app:bt_colorInactive="@color/grey_active"
                app:bt_icon="@drawable/calendarcircle"
                app:bt_shape="@drawable/rounded_r_purple"
                app:bt_shapeColor="@color/purple_bg_light"
                android:elevation="10dp"
                app:bt_title="Profil"
                app:layout_constraintTop_toTopOf="@+id/floating_top_bar_navigation"
                app:layout_constraintBottom_toBottomOf="@+id/floating_top_bar_navigation"


                />

            <com.gauravk.bubblenavigation.BubbleToggleView
                app:layout_constraintLeft_toRightOf="@+id/main_item_calendar"
                app:layout_constraintRight_toLeftOf="@+id/main_item_setting"
                android:id="@+id/main_item_personn"
                android:layout_width="wrap_content"
                app:bt_titleSize="25sp"
                android:layout_height="0dp"
                app:bt_colorActive="@color/orange_active"
                app:bt_colorInactive="@color/grey_active"
                app:bt_icon="@drawable/usercircle"
                app:bt_shape="@drawable/rounded_r_blue"
                app:bt_shapeColor="@color/orange_bg_light"
                android:elevation="10dp"
                app:bt_title="Calendar"
                app:layout_constraintTop_toTopOf="@+id/floating_top_bar_navigation"
                app:layout_constraintBottom_toBottomOf="@+id/floating_top_bar_navigation"/>

            <com.gauravk.bubblenavigation.BubbleToggleView
                app:layout_constraintLeft_toRightOf="@+id/main_item_personn"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/main_item_setting"
                app:bt_titleSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:bt_colorActive="@color/green_active"
                app:bt_colorInactive="@color/grey_active"
                app:bt_icon="@drawable/settingcircle"
                app:bt_shape="@drawable/rounded_r_green"
                app:bt_shapeColor="@color/green_bg_light"
                android:elevation="10dp"
                app:bt_title="Settings"
                app:layout_constraintTop_toTopOf="@+id/floating_top_bar_navigation"
                app:layout_constraintBottom_toBottomOf="@+id/floating_top_bar_navigation"/>

        </com.gauravk.bubblenavigation.BubbleNavigationConstraintView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>