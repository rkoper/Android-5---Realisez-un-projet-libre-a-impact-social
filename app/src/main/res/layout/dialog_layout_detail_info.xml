   <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    style="@style/MyDialogTheme"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorTransparent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="250sp"
        android:layout_height="300dp"
        android:background="@drawable/rectangle_corner_grey_600"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="220dp"
            android:layout_height="250dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_det_info_h_4"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25"/>
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_det_info_h_6"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.375"/>
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_det_info_h_8"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>
            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_det_info_h_81"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.85"/>
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_det_info_h_9"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.975"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_det_info_v_1"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.03"/>
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_det_info_v_8"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.97"/>
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_det_info_v_9"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.97"/>

            <TextView
            android:padding="1dp"
            android:textSize="22sp"
            android:textColor="@color/white"
            style="@style/TxtViewPrincipalWhite"
            android:id="@+id/dialog_det_info_nameevent"
            android:text="Name Party"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="@+id/dialog_det_info_v_9"
            app:layout_constraintLeft_toLeftOf="@+id/dialog_det_info_v_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/dialog_det_info_h_4"/>
        <TextView
            android:padding="1dp"
            android:textSize="15sp"
            android:textColor="@color/white"
            style="@style/TxtViewPrincipalWhite"
            android:id="@+id/dialog_det_info_dateevent"
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@+id/dialog_det_info_hourevent"
            app:layout_constraintLeft_toLeftOf="@+id/dialog_det_info_v_1"
            app:layout_constraintTop_toTopOf="@id/dialog_det_info_h_4"
            app:layout_constraintBottom_toBottomOf="@+id/dialog_det_info_h_6"/>
        <TextView
            android:padding="1dp"
            android:textSize="15sp"
            android:textColor="@color/white"
            style="@style/TxtViewPrincipalWhite"
            android:id="@+id/dialog_det_info_hourevent"
            android:text="Hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/dialog_det_info_dateevent"
            app:layout_constraintRight_toRightOf="@+id/dialog_det_info_v_9"
            app:layout_constraintTop_toTopOf="@id/dialog_det_info_h_4"
            app:layout_constraintBottom_toBottomOf="@+id/dialog_det_info_h_6"/>
        <TextView
            android:padding="1dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            style="@style/TxtViewPrincipalWhite"
            android:text="10 rue XXXXXXXX, Paris"
            android:id="@+id/dialog_det_info_addressevent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            app:layout_constraintLeft_toLeftOf="@+id/dialog_det_info_v_1"
            app:layout_constraintRight_toRightOf="@+id/dialog_det_info_v_9"
            app:layout_constraintTop_toTopOf="@id/dialog_det_info_h_6"
            app:layout_constraintBottom_toBottomOf="@+id/dialog_det_info_h_8"/>

            <TextView
                android:layout_margin="4dp"
                android:padding="1dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="Description"
                android:id="@+id/dialog_det_info_descevent"
                android:fontFamily="@font/roboto"
                android:ellipsize="end"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/dialog_det_info_v_1"
                app:layout_constraintRight_toRightOf="@+id/dialog_det_info_v_9"
                app:layout_constraintTop_toTopOf="@id/dialog_det_info_h_8"
                app:layout_constraintBottom_toBottomOf="@+id/dialog_det_info_h_81"/>


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/dialog_det_info_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey_600"
                android:rotation="45"
                app:backgroundTint="@color/red_300"
                app:borderWidth="2dp"
                app:fabCustomSize="35dp"
                app:layout_constraintBottom_toBottomOf="@+id/dialog_det_info_h_9"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/dialog_det_info_h_81"
                app:maxImageSize="22dp"
                app:srcCompat="@drawable/logo_add"
                app:tint="@android:color/white" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>