<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/event_rv"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:elevation="2dp"
    android:background="@drawable/rectangle_corner_white"
    android:backgroundTint="@color/yellow_50"
    android:layout_margin="3dp"
    android:layout_marginBottom="20dp"
    android:orientation="horizontal">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/home_item2_h6"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/home_item_v15"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/home_item2_h6"
        android:id="@+id/cl1"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/home_item2_v15"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3"/>

        <TextView
            android:id="@+id/home_name"
            style="@style/TxtViewPrincipalBlack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/home_item2_v15"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/event" />

        <ImageView
            android:elevation="3dp"
            android:id="@+id/home_item_img"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/home_item2_v15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/home_item_v15"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_item2_h6"
        android:id="@+id/cl3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/cl1"
        android:padding="10dp">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/home_item_h5"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>

        <TextView
            android:id="@+id/home_address"
            style="@style/TxtViewPrincipalBlack"
            android:layout_margin="1dp"
            android:padding="1dp"
            app:layout_constraintBottom_toTopOf="@+id/home_item_h5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="11/11/1111"/>
        <TextView
            android:id="@+id/home_city"
            android:layout_margin="1dp"
            android:padding="1dp"
            style="@style/TxtViewPrincipalBlack"
            app:layout_constraintTop_toBottomOf="@+id/home_item_h5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="88/88/8888"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/home_item_v15"
        app:layout_constraintTop_toTopOf="@+id/home_item2_h6"
        android:id="@+id/cl2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/cl1">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/home_item2_h5"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>
        <TextView
            android:id="@+id/home_pers"
            style="@style/TxtViewPrincipalBlack"
            android:layout_margin="1dp"
            android:padding="1dp"
            app:layout_constraintBottom_toTopOf="@+id/home_item2_h5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="11/11/1111"/>
        <TextView
            android:id="@+id/home_date"
            android:layout_margin="1dp"
            android:padding="1dp"
            style="@style/TxtViewPrincipalBlack"
            app:layout_constraintTop_toBottomOf="@+id/home_item2_h5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="88/88/8888"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>