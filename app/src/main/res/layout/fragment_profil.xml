<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.profil.ProfilFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_margin="8dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_profil_h_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_profil_h_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_profil_v_8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_profil_v_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_profil_v_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_profil_v_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_profil_v_5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_profil_v_6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_profil_v_65"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_profil_v_75"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7"/>
    <ImageView
        android:background="@drawable/round_white"
        android:id="@+id/profil_image"
        app:layout_constraintTop_toTopOf="@id/gl_profil_v_1"
        app:layout_constraintRight_toRightOf="@id/gl_profil_h_4"
        app:layout_constraintBottom_toBottomOf="@+id/gl_profil_v_3"
        app:layout_constraintLeft_toLeftOf="@id/gl_profil_h_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/textview"
        android:contentDescription="@string/textview" />

    <TextView
        android:padding="30dp"
        android:id="@+id/profil_name"
        app:layout_constraintTop_toTopOf="@+id/gl_profil_v_4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/gl_profil_v_5"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        style="@style/TxtViewPrincipalBlack"
        android:layout_height="0dp"
        android:text="@string/name" />
    <ImageView
        android:id="@+id/profil_edit_name"
        android:layout_marginEnd="15dp"
        android:src="@drawable/edit"
        android:padding="10dp"

        android:background="@drawable/round_white_small"
        android:backgroundTint="@color/blue_A_200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profil_name"
        app:layout_constraintBottom_toBottomOf="@+id/profil_name"
        app:tint="@color/black"
        android:contentDescription="@string/image_view" />
    <TextView
        android:padding="5dp"
        android:id="@+id/profil_choose"
        app:layout_constraintTop_toTopOf="@+id/gl_profil_v_5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/gl_profil_v_6"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:background="@drawable/rectangle_corner_blue_light"
        style="@style/TxtViewPrincipalBlack"
        android:layout_height="0dp"
        android:text="@string/change_your_profil_picture" />

    <ImageView
        android:background="@drawable/round_white_small"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/profil_img1"
        app:layout_constraintTop_toTopOf="@+id/gl_profil_v_65"
        app:layout_constraintBottom_toBottomOf="@+id/gl_profil_v_75"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/profil_img2"
        android:contentDescription="@string/image_view" />
    <ImageView
        android:background="@drawable/round_white_small"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/profil_img2"
        app:layout_constraintTop_toTopOf="@+id/gl_profil_v_65"
        app:layout_constraintBottom_toBottomOf="@+id/gl_profil_v_75"
        app:layout_constraintLeft_toRightOf="@+id/profil_img1"
        app:layout_constraintRight_toLeftOf="@+id/profil_img3"
        android:contentDescription="@string/image_view" />
    <ImageView
        android:background="@drawable/round_white_small"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/profil_img3"
        app:layout_constraintLeft_toRightOf="@+id/profil_img2"
        app:layout_constraintTop_toTopOf="@+id/gl_profil_v_65"
        app:layout_constraintBottom_toBottomOf="@+id/gl_profil_v_75"
        app:layout_constraintRight_toLeftOf="@+id/profil_img4"
        android:contentDescription="@string/image_view"/>
    <ImageView
        android:background="@drawable/round_white_small"
        app:layout_constraintLeft_toRightOf="@+id/profil_img3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/profil_img4"
        app:layout_constraintTop_toTopOf="@+id/gl_profil_v_65"
        app:layout_constraintBottom_toBottomOf="@+id/gl_profil_v_75"
        app:layout_constraintRight_toRightOf="parent"
        android:contentDescription="@string/image_view"/>


    <ImageView
        android:background="@drawable/round_white_small"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/profil_img5"
        app:layout_constraintTop_toTopOf="@+id/gl_profil_v_75"
        app:layout_constraintBottom_toBottomOf="@+id/gl_profil_v_8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/profil_img6"
        android:contentDescription="@string/image_view"/>
    <ImageView
        android:background="@drawable/round_white_small"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/profil_img6"
        app:layout_constraintTop_toTopOf="@+id/gl_profil_v_75"
        app:layout_constraintBottom_toBottomOf="@+id/gl_profil_v_8"
        app:layout_constraintLeft_toRightOf="@+id/profil_img5"
        app:layout_constraintRight_toLeftOf="@+id/profil_img7"
        android:contentDescription="@string/image_view"/>
    <ImageView
        android:background="@drawable/round_white_small"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/profil_img7"
        app:layout_constraintTop_toTopOf="@+id/gl_profil_v_75"
        app:layout_constraintBottom_toBottomOf="@+id/gl_profil_v_8"
        app:layout_constraintLeft_toRightOf="@+id/profil_img6"
        app:layout_constraintRight_toRightOf="parent"
        android:contentDescription="@string/image_view"/>

    <ImageView
        android:id="@+id/profil_save"
        android:src="@drawable/check"
        android:padding="10dp"
        android:backgroundTint="@color/blue_A_200"
        android:background="@drawable/round_white_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/profil_img7"
        app:layout_constraintLeft_toLeftOf="@+id/profil_img6"
        app:layout_constraintTop_toTopOf="@+id/gl_profil_v_8"
        app:layout_constraintBottom_toBottomOf="@+id/gl_profil_v_8"
        app:tint="@color/black"
        android:contentDescription="@string/image_view"/>

    <ImageView
        android:id="@+id/profil_refresh"
        android:padding="10dp"
        android:src="@drawable/refreshtwo"
        android:background="@drawable/round_white_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue_A_200"
        app:layout_constraintRight_toRightOf="@+id/profil_img6"
        app:layout_constraintLeft_toLeftOf="@+id/profil_img5"
        app:layout_constraintTop_toTopOf="@+id/gl_profil_v_8"
        app:layout_constraintBottom_toBottomOf="@+id/gl_profil_v_8"
        app:tint="@color/black"
        android:contentDescription="@string/image_view"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>