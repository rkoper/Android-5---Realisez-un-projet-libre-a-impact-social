<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/calendar_h_55"
            app:layout_constraintGuide_percent="0.5"/>
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/calendar_h_05"
            app:layout_constraintGuide_percent="0.05"/>


        <com.tejpratapsingh.recyclercalendar.views.InfiniteRecyclerCalendarView
            app:layout_constraintTop_toTopOf="@+id/calendar_h_05"
            app:layout_constraintBottom_toTopOf="@+id/calendar_h_55"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/calendarRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="0dp" />


            <TextView
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/calendarRecyclerView"
                android:id="@+id/textViewSelectedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="32sp"
                android:textStyle="bold"
                tools:text="21" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>