<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.home.HomeFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/purple_active"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/white"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/calendar_h_05"
            app:layout_constraintGuide_percent="0.0"/>
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/calendar_h_5"
            app:layout_constraintGuide_percent="0.67"/>
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/calendar_h_6"
            app:layout_constraintGuide_percent="0.66"/>
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/calendar_h_7"
            app:layout_constraintGuide_percent="0.73"/>
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/calendar_h_8"
            app:layout_constraintGuide_percent="0.8"/>
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/calendar_h_9"
            app:layout_constraintGuide_percent="0.86"/>
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/calendar_v_5"
            app:layout_constraintGuide_percent="0.5"/>


        <com.tejpratapsingh.recyclercalendar.views.InfiniteRecyclerCalendarView
            app:layout_constraintTop_toTopOf="@+id/calendar_h_05"
            app:layout_constraintBottom_toTopOf="@+id/calendar_h_6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/calendarRecyclerView"
            android:background="@color/purple_50"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="10dp"
            android:layout_marginTop="0dp" />
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/calendar_h_5"
            app:layout_constraintBottom_toBottomOf="@+id/calendar_h_7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:id="@+id/textViewSelectedName"
            android:layout_height="0dp"
            style="@style/TxtViewPrincipalBlack"
            tools:text="Party" />
        <TextView
            android:layout_margin="5dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/calendar_h_7"
            app:layout_constraintBottom_toBottomOf="@+id/calendar_h_8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/textViewSelectedDate"
            android:layout_marginStart="10dp"
            style="@style/TxtViewPrincipalBlack"
            tools:text="01/01/2020" />
        <ImageView
            app:layout_constraintTop_toBottomOf="@+id/calendar_h_8"
            app:layout_constraintLeft_toLeftOf="@+id/calendar_v_5"
            app:layout_constraintRight_toRightOf="@+id/calendar_v_5"
            android:id="@+id/textViewSelectedIcon"
            android:backgroundTint="@color/purple_200"
            android:background="@drawable/circle"
            app:tint="@color/white"
            android:src="@drawable/eye"
            android:layout_width="50dp"
            android:layout_height="50dp"
            style="@style/TxtViewPrincipalBlack"
            tools:text="11" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>