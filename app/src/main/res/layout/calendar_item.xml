<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView

            app:layout_constraintTop_toTopOf="@+id/textCalenderItemVerticalDay"
            app:layout_constraintBottom_toBottomOf="@+id/textCalenderItemVerticalDate"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/viewCalenderItemVerticalEvent" />

        <TextView
            style="@style/TxtViewPrincipalBlackForCalendar"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textCalenderItemVerticalDay"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="@string/Mon" />

        <TextView
            style="@style/TxtViewPrincipalBlack"
            app:layout_constraintTop_toBottomOf="@+id/textCalenderItemVerticalDay"
            android:id="@+id/textCalenderItemVerticalDate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold"
            tools:text="" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>

</layout>